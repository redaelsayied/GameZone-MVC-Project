@model CreateGameFormViewModel

@{
	ViewData["Title"] = "Create Game";
}

<form asp-controller="Games" asp-action="Create" method="post" enctype="multipart/form-data">
	<div class="row">
		<div style="margin-bottom: 20px;" class="col-md-6">
			<legend>Add New Game</legend>
			<div>
				<label asp-for="Name" class="form-label mt-4">Game name</label>
				<input type="text" class="form-control" asp-for="Name" placeholder="Enter game name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="Description" class="form-label mt-4">Game Description</label>
				<textarea class="form-control" asp-for="Description" rows="3"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="CategoryID" class="form-label mt-4">Choose Category</label>
				<select class="form-select" asp-for="CategoryID" asp-items="Model.Categories"
				        data-placeholder="Select a category" data-minimum-results-for-search="Infinity">
					<option value=""></option>
				</select>
				<span asp-validation-for="CategoryID" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="SelectedDevices" class="form-label mt-4">Select Supported Devices</label>
				<select multiple class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices"
						data-placeholder="Select a category" data-minimum-results-for-search="Infinity">
					<option value=""></option>

				</select>
				<span asp-validation-for="SelectedDevices" class="text-danger"></span>
			</div>

			<div>
				<label asp-for="Cover" class="form-label mt-4">Upload game cover</label>
				<input class="form-control" type="file" asp-for="Cover"
				       data-rule-extension="jpg,jpeg,png" data-msg-extension="this file not allowed"
				       data-rule-filesize="104857600" data-msg-filesize="file is to large">
				<div class="form-text text-muted">only .jpg, .jpeg, .png files are allowed with max size 1MB</div>
				<span asp-validation-for="Cover" class="text-danger"></span>
			</div>
			<br/>
			<button type="submit" class="btn btn-primary" style="margin:auto">Submit</button>
		</div>
		<div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
			<img alt="Cover" class="cover-preview d-none"/>
		</div>

	</div>
</form>

@section Scripts
{
	<partial name="_ValidationScriptsPartial"/>
	<script src="~/js/filesize-validator.js" asp-append-version="true"></script>
	<script src="~/js/game-form.js" asp-append-version="true"></script>
}